{
  "compilerOptions": {
    "target": "es2016",                              // JavaScript language version for emitted code
    "module": "commonjs",                            // Module format
    "jsx": "react-jsx",                              // React JSX mode for React 17+ JSX transform
    "moduleResolution": "node",                      // Resolve modules like Node.js
    "allowSyntheticDefaultImports": true,            // Enable default imports from modules with no default export
    "esModuleInterop": true,                         // Compatibility with CommonJS
    "strict": true,                                  // Enable all strict type-checking options
    "skipLibCheck": true,                            // Skip type checking of all .d.ts files for faster builds
    "forceConsistentCasingInFileNames": true,        // Enforce case-sensitive file names
    "baseUrl": "./src",                              // Base directory for non-relative imports
    "paths": {                                       // Path mappings (optional but can help organize imports)
      "@components/*": ["components/*"],
      "@utils/*": ["utils/*"]
    },
    "resolveJsonModule": true,                       // Allow importing JSON files
    "noImplicitAny": true,                           // Disallow implicit 'any' types
    "strictNullChecks": true,                        // Enable strict null checks
    "exactOptionalPropertyTypes": true               // Enforce exact optional properties
  },
  "include": ["src/**/*"],                           // Include all source files in src directory
  "exclude": ["node_modules", "build", "dist"]       // Exclude unnecessary directories from build
}
